import numpy as np
from PIL import ImageGrab
import cv2
#import time

#last_time = time.time()
while(True):
    Screen=  np.array(ImageGrab.grab(bbox=(0,40,640,480)))
    #print('Loop taken{}'.format(time.time()-last_time))
    last_time=time.time()
    cv2.imshow('Self Driving With GTA-SA',cv2.cvtColor(Screen,cv2.COLOR_BGR2RGB))
    if cv2.waitKey(25) & 0xFF == ord('q'):
        cv2.destroyAllWindows()
        break
